<section id="search">

  <div class="container">

    <style>
      .form-search {
        border: 1px solid #eeeeee;
        padding: 20px 10px 20px 10px;
        background-color: #eeeeee;
      }
      .btn {
        margin-top: 8px;
      }
      .baris {
        margin-top: 10px;
      }

    </style>


   <!-- Heading -->
   <h3><i class="fa fa-search"></i>&nbsp;Find Your Home Here</h3>

    <div class="form-search">
      <%= search_form_for @q do |f| %>
        <div class="row baris">
          <div class="col-lg-3">
            <%= f.label :location_cont, 'Property Location' %>
            <%= f.select(:location_cont, options_for_select([
                                                                ['Baloi','Baloi'],
                                                                ['Barelang','Barelang'],
                                                                ['Batam Center','Batam Center'],
                                                                ['Botania','Botania'],
                                                                ['Batam Kota','Batam Kota'],
                                                                ['Batu Aji','Batu Aji'],
                                                                ['Batu Ampar','Batu Ampar'],
                                                                ['Bengkong','Bengkong'],
                                                                ['Jodoh','Jodoh'],
                                                                ['Muka Kuning','Muka Kuning'],
                                                                ['Nagoya','Nagoya'],
                                                                ['Sei Panas','Sei Panas'],
                                                                ['Sekupang','Sekupang'],
                                                                ['Suka Jadi','Suka Jadi'],
                                                                ['Tg Piayu','Tg Piayu'],
                                                                ['Tiban','Tiban']
                                                            ]),
                         {:prompt => "Any"},
                         {class: "form-control"}
                ) %>
          </div>
          <div class="col-lg-3">
            <%= f.label :status_cont, 'Property Status' %>
            <% f.search_field :status_cont, class:'form-control', :placeholder => "Any" %>
            <%= f.select(:status_cont, options_for_select([
                    ['For Rent', 'For Rent'],
                    ['For Sale', 'For Sale'],
                    ['Sold !', 'Sold !' ],
                    ['Leased !', 'Leased !']
                  ]),
              {:prompt => "Any"},
              {:class => "form-control"}
            ) %>
          </div>
          <div class="col-lg-3">
            <%= f.label :type_count, 'Property Type' %>
            <%= f.search_field :property_type_cont, class:'form-control', :placeholder => "Any" %>
          </div>
          <div class="col-lg-3">
            <%= f.label :bedroom_count, 'Min Bedroom' %>
            <%= f.search_field :bedroom_eq, class:'form-control', :placeholder => "Any" %>
          </div>
        </div>
        <div class="row baris">
          <div class="col-lg-2">
            <%= f.label :bathroom_count, 'Min Bathroom' %>
            <%= f.search_field :bathroom_eq, class:'form-control', :placeholder => "Any" %>
          </div>
          <div class="col-lg-3">
            <%= f.label :price_gteq, 'Min Price' %>
            <%= f.search_field :price_gteq, class:'form-control', :placeholder => "Any" %>
          </div>
          <div class="col-lg-3">
            <%= f.label :price_lteq, 'Max Price' %>
            <%= f.search_field :price_lteq, class:'form-control', :placeholder => "Any" %>
          </div>
          <div class="col-lg-2">
            <%= f.label :area_eq, 'Min Area' %>
            <%= f.search_field :area_eq, class:'form-control', :placeholder => "Any" %>
          </div>
          <div class="action col-lg-2">
            <br>
            <%= f.submit class: "btn btn-primary btn-lg" %>
          </div>

        </div>


      <% end %>

    </div>

  </div>
</section>