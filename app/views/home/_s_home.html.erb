<section id="home">
  <div class="container">
    <div class="banner-container">

      <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carousel" data-slide-to="0" class="active"></li>
          <li data-target="#carousel" data-slide-to="1"></li>
          <li data-target="#carousel" data-slide-to="2"></li>
        </ol>

         <!--Carousel items-->
        <% @banners.each do |banner| %>
        <div class="carousel-inner">
          <div class="active item"><img src="<%= banner.banner1 %>" height="497" width="1525" /></div>
          <div class="item"><img src="<%= banner.banner2 %>" height="497" width="1525" /></div>
          <div class="item"><img src="<%= banner.banner3 %>" height="497" width="1525" /></div>
          <div class="item"><img src="<%= banner.banner4 %>" height="497" width="1525" /></div>
          <div class="item"><img src="<%= banner.banner5 %>" height="497" width="1525" /></div>
          <!--<div class="item"><img src="/theme/images/banner-bg2.jpg" alt="banner" /></div>-->
          <!--<div class="item"><img src="/theme/images/banner-bg3.jpg" alt="banner" /></div>-->
          <!--<div class="item"><img src="http://res.cloudinary.com/medioxtra/image/upload/c_fit/v1456490660/fekcz2gx7uczcfckysy0.jpg" height="497" width="1525" alt="banner" /></div>-->
        </div>
        <% end %>

        <!-- Carousel nav -->
        <a class="carousel-control left" href="#carousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#carousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>
  </div>
  
  <!--<div class="container hero-text2">-->
    <!--<h1>Welcome to Citra Megah Property - Batam</h1>-->
  <!--</div>-->

  <!--ReactJS-->
  <div id="welkom" class="container hero-text2"></div>
  <script type="text/babel">
    var Welcome = React.createClass({
      render: function() {
        return(
          <h1>Welcome to {this.props.name}</h1>
        )
      }
    });
    ReactDOM.render(
        <Welcome name="Citra Megah Properti - Batam" />,
        document.getElementById('welkom')
    );

  </script>

</section>