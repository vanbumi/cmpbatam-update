<section id="work" class="page-section page">
    <div class="container text-center">
      
    <div id="judul"></div>
    
    <script type="text/babel">
      ReactDOM.render(
        <h2>Daftar Property Terbaik Kami</h2>,
        document.getElementById('judul')
      );
    </script>

      <div class="row row-list">
        
        <% @properties.each do |property| %>
          <% property.images.each do |image| %>
            <div class="col-sm-6 col-md-4 artikel">
              <div class="thumbnail">
                <%= cl_image_tag(image.path, { size: '348x230', crop: :fit }) %>
                <div class="caption text-left">
                  <h3><%= property.name %></h3>
                  <ul class="list-unstyled">
                    <li>Type: <%= property.property_type %></li>
                    <li>Luas: <%= property.area %></li>
                  </ul>
                  <p><a href="/<%= property.slug %>" class="btn btn-primary" role="button">lihat detail</a></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        
      </div>
    </div>
</section>