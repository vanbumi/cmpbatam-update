<div class="container" style="margin-top: 10px">

  <% if flash[:notice] %>
    <p id="notice" class="alert alert-info" role="alert"><%= notice %></p>
  <% end %>

  <div class="row text-center">
    <h3>Ini adalah Pesan anda</h3>
  </div>

  <div class="row">
    <div class="col-lg-8 col-lg-offset-2" style="border: 1px solid #f0f0f0; margin-top: 20px; padding: 10px 20px 20px 20px">
      <p>
        <strong>Name:</strong>
        <%= @contact.name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @contact.email %>
      </p>

      <p>
        <strong>Nohp:</strong>
        <%= @contact.nohp %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= @contact.comment %>
      </p>

    </div>
  </div>
  <br>
  <div class="row">
    <% if user_signed_in? %>
        <%= link_to 'Edit', edit_contact_path(@contact) %> |
        <%= link_to 'Back', contacts_path %> <br>
    <% end %>
  </div>
  <br>
  <div class="row text-center">
    <p>Kembali ke halaman semula <i><u><%= link_to 'Home', root_path %></u></i></p>
  </div>

</div>