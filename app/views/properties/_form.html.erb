<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control"  %>
  </div>

  <div class="field">
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Cara menulis Alias</strong>: semua huruf kecil, tanpa spasi, spasi ganti dengan (-) Contoh: <b>di-jual-rumah-puriloka</b></span>.
    </div>
    <%= f.label :alias %> (Slug)<br>
    <%= f.text_field :slug, class:"form-control", :placeholder => 'CONTOH PENULISAN ALIAS: dijual-rumah-mewah-batam-center' %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.select(:location, options_for_select([
          ['Baloi','Baloi'],
          ['Barelang','Barelang'],
          ['Batam Center','Batam Center'],
          ['Botania','Botania'],
          ['Batam Kota','Batam Kota'],
          ['Batu Aji','Batu Aji'],
          ['Batu Ampar','Batu Ampar'],
          ['Bengkong','Bengkong'],
          ['Jodoh','Jodoh'],
          ['Muka Kuning','Muka Kuning'],
          ['Nagoya','Nagoya'],
          ['Sei Panas','Sei Panas'],
          ['Sekupang','Sekupang'],
          ['Sukajadi','Sukajadi'],
          ['Tg Piayu','Tg Piayu'],
          ['Tiban','Tiban']
        ], @property.location
      ),
         {:prompt => "Pilih.."},
         {class: "form-control"}
      ) %>
  </div>
  <div class="field">
    <%= f.label :status %><br>

    <%= f.select(:status, options_for_select([
          ['For Rent', 'For Rent'],
          ['Disewa Cepat!', 'Disewa Cepat'],
          ['For Sale', 'For Sale'],
          ['Dijual Cepat!', 'Dijual Cepat'],
          ['Sold !', 'Sold !' ],
          ['Leased !', 'Leased !']
      ]),
         {:prompt => "Pilih.."},
         {:class => "form-control"}
    ) %>
  </div>
  <div class="field">
    <%= f.label :property_type %><br>
    <%= f.select(:property_type, options_for_select([
                     ['Rumah', 'Rumah'],
                     ['Apartemen', 'Apartemen'],
                     ['Kantor', 'Kantor' ],
                     ['Ruko', 'Ruko'],
                     ['Tanah', 'Tanah'],
                     ['Gudang', 'Gudang']
                 ], @property.property_type
              ),
                 {:prompt => "Pilih.."},
                 {:class => "form-control"}
        ) %>
  </div>

  <div class="field">
    <%= f.label :bedroom %><br>
    <%= f.number_field :bedroom, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :bathroom %><br>
    <%= f.number_field :bathroom, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :area %><br>
    <%= f.text_field :area, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :luas_bangunan %><br>
    <%= f.text_field :luas_bangunan, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :luas_tanah %><br>
    <%= f.text_field :luas_tanah, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :main_fasility, 'Fasilitas' %><br>
    <%= f.text_field :main_fasility, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :main_description, 'Keterangan Tambahan' %><br>
    <%= f.text_area :main_description, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :upload_image, "Upload Foto Utama" %><br>
    <%= f.attachinary_file_field :images %>
  </div>
    <br>
  <div>
    <%= f.label :active, 'List Aktif' %>
    <%= f.select(:active, options_for_select([
           ['Yes','1'],
           ['No','2']], @property.active),
           {:prompt => "Pilih.."},
           {class: "form-control"}
    ) %>
  </div>

  <br>

  <h3>Upload another Foto via <a href="http://cloudinary.com/">Cloudinary</a></h3>
  <div class="field">
    <%= f.label :image_url, "Foto 1" %><br>
    <%= f.text_field :image_url, class:"form-control" %>
  </div>
  <div>
    <%= f.label :image_description, "Description Foto 1" %><br>
    <%= f.text_field :image_description, class:"form-control" %>
  </div>
    <br>
  <div class="field">
