    <%= f.text_field :image_url3, class:"form-control" %>
  </div>
  <div>
    <%= f.label :image_description3, "Description Foto 3" %><br>
    <%= f.text_field :image_description3, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :image_url4, "Foto 4" %><br>
    <%= f.text_field :image_url4, class:"form-control" %>
  </div>
  <div>
    <%= f.label :image_description4, "Description Foto 4" %><br>
    <%= f.text_field :image_description4, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :image_url5, "Foto 5" %><br>
    <%= f.text_field :image_url5, class:"form-control" %>
  </div>
  <div>
    <%= f.label :image_url5, "Description Foto 5" %><br>
    <%= f.text_field :image_description5, class:"form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :image_url6, "Foto 6" %><br>
    <%= f.text_field :image_url6, class:"form-control" %>
  </div>
  <div>
    <%= f.label :image_description6, "Description Foto 6" %><br>
    <%= f.text_field :image_description6, class:"form-control" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit class:"btn btn-lg btn-primary" %>
  </div>
<% end %>
