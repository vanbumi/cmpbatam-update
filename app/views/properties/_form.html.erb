<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :alias %><br>
    <%= f.text_field :slug, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :property_type %><br>
    <%= f.text_field :property_type, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :bedroom %><br>
    <%= f.number_field :bedroom, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :bathroom %><br>
    <%= f.number_field :bathroom, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :area %><br>
    <%= f.text_field :area, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :upload_image %><br>
    <%= f.attachinary_file_field :images %>
  </div>

  <div id="image_url"></div>
  <br>
  <div class="actions">
    <%= f.submit class:"btn btn-lg btn-primary" %>
  </div>
<% end %>

<script>
  $function() {
    $('.actions').click(function() {
      $('#image_url').append();
    });
  };
</script>
